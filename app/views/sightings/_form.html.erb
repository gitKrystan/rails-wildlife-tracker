<%= render('layouts/errors', :object => @sighting) %>

<%= form_for [@species, @sighting] do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.label :latitude %>
  <%= f.text_field :latitude %>
  <%= f.label :longitude %>
  <%= f.text_field :longitude %>

  <%= f.label :region %>
  <%= select("sighting", "region_id", Region.all.collect {|r| [r.name, r.id] }, {prompt: "Select Region"}) %>

  <p><%= f.submit %></p>
<% end %>

<%= link_to "Back to Species", species_path(@species) %>
